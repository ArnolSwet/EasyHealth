<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    >

    <ImageView
        android:id="@+id/imageFoodMeal"
        android:layout_width="80dp"
        android:layout_height="67dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <LinearLayout
        android:id="@+id/txtsClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/imageFoodMeal">

        <TextView
            android:id="@+id/txtNameMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of menu"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtCalMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnCancelMeal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/btnCancel"
        android:tint="@android:color/holo_red_dark"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />


</RelativeLayout>
