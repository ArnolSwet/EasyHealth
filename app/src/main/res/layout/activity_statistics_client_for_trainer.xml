<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsClientForTrainer">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:background="#00FFFFFF"
        android:contentDescription="Back to ClientForTrainer"
        app:srcCompat="@drawable/chevron_left" />

    <com.jjoe64.graphview.GraphView
    android:id="@+id/monthGraph"
    android:layout_width="match_parent"
    android:layout_height="254dp"
    android:layout_below="@+id/toolbar" />

    <Spinner
        android:id="@+id/spinMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/monthGraph" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/compareGraph"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:layout_below="@+id/spinMonth" />

    <Spinner
        android:id="@+id/spinCompare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/compareGraph" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:text="Statistics" />

</RelativeLayout>